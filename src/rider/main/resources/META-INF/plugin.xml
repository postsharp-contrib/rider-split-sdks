<idea-plugin url="https://github.com/postsharp-contrib/rider-split-sdks/">
  <id>net.postsharp.split-sdks-rider</id>
  <name>Split SDK in .csproj</name>
  <version>1.1</version>
  <vendor url="https://github.com/postsharp-contrib/rider-split-sdks" email="hello@postsharp.net">PostSharp Technologies</vendor>
  <idea-version since-build="191" />
  <depends>com.intellij.modules.rider</depends>

  <description>
<![CDATA[
<p>
  Adds a .csproj quick fix that replace the SDK line in the file header with two import statements.
</p>
]]>
  </description>

  <extensions defaultExtensionNs="com.intellij">
    <localInspection language="XML"
                     displayName="Splitting Sdk attributes into Sdk.props and Sdk.targets"
                     groupPath="Java"
                     groupBundle="messages.InspectionsBundle"
                     groupKey="group.names.probable.bugs"
                     enabledByDefault="true"
                     level="INFORMATION"
                     implementationClass="net.postsharp.splitsdks.SplitSdksInspection" />
  </extensions>

  <actions>
